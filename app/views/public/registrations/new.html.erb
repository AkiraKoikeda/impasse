
<%= render "public/shared/error_messages", resource: resource %>
<div class="container pt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-12 justify-content-center">
      <h4 class="col-lg-4 col-md-5 col-sm-12  mb-5 text-center title">新規会員登録</h4>
      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <div class="d-flex flex-wrap bd-highlight mb-3">
          <span class="flex-fill bd-highlight col-xl-1 col-sm-0 col-0"></span>
          <span class="flex-fill bd-highlight col-lg-3 col-md-4 col-sm-12 col-12 offset-lg-2 ml-lg-5">ユーザー名</span>
          <span class="form_group flex-fill">
            <%= f.text_field :name ,class: "form_control flex-fill bd-highlight",size: "50", placeholder: "安全太郎" %>
          </span>
        </div>

        <div class="d-flex flex-wrap bd-highlight mb-3">
          <span class="flex-fill bd-highlight col-xl-1 col-sm-0 col-0"></span>
          <span class="flex-fill bd-highlight col-lg-3 col-md-4 col-sm-12 col-12 offset-lg-2 ml-lg-5"> e-mailアドレス</span>
          <span class="form_group flex-fill">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form_control  flex-fill bd-highlight", size: "50", placeholder: "sample@example.com" %>
          </span>
        </div>

        <div class="d-flex flex-wrap bd-highlight mb-3">
          <span class="flex-fill bd-highlight col-xl-1 col-sm-0 col-0"></span>
          <span class="flex-fill bd-highlight col-lg-3 col-md-4 col-sm-12 col-12 offset-lg-2 ml-lg-5">パスワード</span>
          <span class="form_group flex-fill">
            <%= f.password_field :password, autocomplete: "new-password", class: "form_control  flex-fill bd-highlight", size: "50" %>
          </span>
        </div>

        <div class="d-flex flex-wrap bd-highlight">
          <span class="flex-fill bd-highlight col-xl-1 col-sm-0 col-0"></span>
          <span class="flex-fill bd-highlight col-lg-3 col-md-4 col-sm-12 col-12 offset-lg-2 ml-lg-5">パスワード(確認用)</span>
          <span class="form_group flex-fill">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form_control  flex-fill bd-highlight", size: "50" %>
          </p>
        </div>

        <div class="d-flex bd-highlight justify-content-center">
            <%= f.submit "新規登録", class: "btn btn-success px-5" %>
        </div>
      <% end %>
      <div class="col-12 mb-5"></div>
      <h5 class="col-lg-4 col-md-5 col-sm-12 col-11 mb-3 text-center title">既に登録済みの方</h5>
      <p class="ml-5 pl-3"><%= render "public/shared/links" %>　からログインしてください。</p>
    </div>
  </div>
</div>

