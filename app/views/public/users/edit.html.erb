<div class="container pt-5">
  <div class="row justify-content-center">
    <div class="col-12">
      <h4 class="col-5 title mt-3 mb-4 text-center">ユーザー詳細編集</h4>
      <%= form_with model: current_user, url: users_path do |f| %>
        <div class="d-flex bd-highlight">
          <span class="flex-fill bd-highlight col-xl-1 col-sm-0 col-0"></span>
          <p class="flex-fill bd-highlight col-lg-3 col-md-4 col-sm-12 col-12 offset-lg-2 ml-lg-5">ユーザー名</p>
          <div class="form_group flex-fill">
            <%= f.text_field :name, class: "form_control flex-fill bd-highlight",size: "50",placeholder: "運転太郎" %>
          </div>
        </div>
        <div class="d-flex bd-highlight">
          <span class="flex-fill bd-highlight col-xl-1 col-sm-0 col-0"></span>
          <p class="flex-fill bd-highlight col-lg-3 col-md-4 col-sm-12 col-12 offset-lg-2 ml-lg-5">e-mailアドレス</p>
          <div class="form_group flex-fill">
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form_control flex-fill bd-highlight",size: "50",placeholder: "sample@example.com" %>
          </div>
        </div>
        <div class="d-flex bd-highlight justify-content-center mb-2">
            <%= f.submit '更新', class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class="col-12 mt-5"></div>
      <div class="d-flex bd-highlight justify-content-center mb-2">
        <%= link_to '退会', unscribe_users_path, class: "btn btn-danger" %>
      </div>

    </div>
  </div>
</div>
