<div class="container">
  <div class="row  justify-content-center">
    <div class="offset-1 col-4">
      <h4>ユーザー編集</h4>
    </div>
    <div class="col-12　mb-3"></div>
    <div class="col-8">
      <%= form_with model: current_user, url: users_path do |f| %>
        <div class="d-flex col-12 mb-3">
          <span class="flex-fill bd-highlight col-3 align-items-center">ユーザー名</span>
            <%= f.text_field :name, class: "flex-fill rounded" %>
        </div>
        <div class="d-flex col-12 mb-3">
          <span class="flex-fill bd-highlight col-3 align-items-center">e-mailアドレス</span>
            <%= f.text_field :email, class: "flex-fill rounded" %>
        </div>
        <div class="d-flex bd-highlight justify-content-center mb-2">
            <%= f.submit '更新', class: "btn btn-primary" %>
        </div>
      <% end %>
      
      <button class="btn btn-danger">
        <%= link_to '退会', unscribe_users_path %>
      </button>
      
    </div>
  </div>
</div>
