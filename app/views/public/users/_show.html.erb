<h4 class="col-4 mb-4">ユーザー詳細</h4>
<div class="col-8"></div>
<div class="col-lg-4 col-12">
    <div class="col-5 align-items-left">ユーザー名</div>
    <h5 class="col-12 text-center mb-3"><%= user.name %></h5>
    <div class="col-5 align-items-left">e-mailアドレス</div>
    <h5 class="col-12 text-center mb-5"><%= user.email %></h5>

  <% if admin_signed_in? %>
     <span>会員ステータス</span>
    <% if user.is_deleted == true %>
      <span>退会</span>
    <% else %>
      <span>有効</span>
    <% end %>
  <% end %>
  <div class="text-center mb-5">
    <button class="btn btn-success">
      <% if admin_signed_in? %>
        <%= link_to '編集', edit_admin_user_path(user.id) %>
      <% else %>
        <%= link_to '編集', edit_users_path %>
      <% end %>
    </button>
  </div>


</div>
