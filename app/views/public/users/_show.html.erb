<h4 class="col-4 mb-4">ユーザー詳細</h4>
<div class="col-8"></div>
<div class="col-lg-4 col-12">
    <div class="col-5 align-items-left">ユーザー名</div>
    <h5 class="col-12 text-center mb-3"><%= user.name %></h5>
    <div class="col-5 align-items-left">e-mailアドレス</div>
    <h5 class="col-12 text-center mb-3"><%= user.email %></h5>

  <% if admin_signed_in? %>
     <div class="col-5 align-items-left">会員ステータス</div>
    <% if user.is_deleted == true %>
      <h5 class="col-12 text-center mb-3 text-danger mb-5">退会</h5>
    <% else %>
      <h5 class="col-12 text-center mb-3 text-success mb-5">有効</h5>
    <% end %>
  <% end %>
  <div class="text-center mb-5">
      <% if admin_signed_in? %>
        <%= link_to '編集', edit_admin_user_path(user.id), class: "btn btn-success" %>
      <% else %>
        <%= link_to '編集', edit_users_path, class: "btn btn-success" %>
      <% end %>
  </div>


</div>
