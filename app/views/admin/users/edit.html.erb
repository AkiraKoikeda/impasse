<div class="container pt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-12 justify-content-center">
      <h4 class="col-lg-5 col-md-5 col-sm-12 col-12 mb-5 text-center title">ユーザー詳細編集</h4>
      <%= form_with model: @user, url: admin_user_path(@user.id) do |f| %>
        <div class="d-flex flex-wrap bd-highlight">
          <span class="flex-fill bd-highlight col-xl-1 col-sm-0 col-0"></span>
          <p class="flex-fill bd-highlight col-lg-3 col-md-4 col-sm-12 col-12 offset-lg-2 ml-lg-5">ユーザー名</p>
          <p class="form_group flex-fill">
            <%= f.text_field :name, class: "form_control flex-fill bd-highlight",size: "50",placeholder: "sample@example.com" %>
          </p>
        </div>
        <div class="d-flex flex-wrap bd-highlight">
          <span class="flex-fill bd-highlight col-xl-1 col-sm-0 col-0"></span>
          <p class="flex-fill bd-highlight col-lg-3 col-md-4 col-sm-12 col-12 offset-lg-2 ml-lg-5">e-mailアドレス</p>
          <p class="form_group flex-fill">
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form_control flex-fill bd-highlight",size: "50",placeholder: "sample@example.com" %>
          </p>
        </div>
        <div class="d-flex flex-wrap bd-highlight">
          <span class="flex-fill bd-highlight col-xl-1 col-sm-0 col-0"></span>
          <p class="flex-fill bd-highlight col-lg-3 col-md-4 col-sm-12 col-12 offset-lg-2 ml-lg-5">会員ステータス</p>
          <p class="form_group flex-fill justify-content-center">
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, '有効', value: false, class: "text-success" %>
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, '退会', value: true, class: "text-danger" %>
          </p>
        </div>
        <div class="col-12 mb-5"></div>
        <div class="d-flex bd-highlight">
          <span class="flex-fill bd-highlight col-1"></span>
          <span class="flex-fill bd-highlight col-3 ml-5"></span>
          <p class="actions">
            <%= f.submit '更新', class: 'btn btn-success' %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
