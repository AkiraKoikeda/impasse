<h4>ユーザー詳細編集</h4>
<%= form_with model: @user, url: admin_user_path(@user.id) do |f| %>
  <%= f.label :name, 'ユーザー名' %>
  <%= f.text_field :name %>
  <%= f.label :email, 'e-mailアドレス' %>
  <%= f.email_field :email %>
  <%= f.label :is_deleted, '会員ステータス' %>
  <%= f.radio_button :is_deleted, false %>
  <%= f.label :is_deleted, '有効', value: false %>
  <%= f.radio_button :is_deleted, true %>
  <%= f.label :is_deleted, '退会', value: true %>

  <%= f.submit %>
<% end %>
