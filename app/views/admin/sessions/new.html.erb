<div class="container pt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-12 justify-content-center">
      <h4 class="col-lg-4 col-md-4 col-sm-12 col-12 mb-5 text-center title">管理者ログイン</h4>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="d-flex flex-wrap bd-highlight">
        <span class="flex-fill bd-highlight col-xl-1 col-sm-0 col-0"></span>
        <p class="flex-fill bd-highlight col-lg-3 col-md-4 col-sm-12 col-12 offset-lg-2 ml-lg-5">メールアドレス</p>
        <p class="form_group flex-fill">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form_control flex-fill bd-highlight",size: "50",placeholder: "sample@example.com" %>
        </p>
      </div>
      <div class="d-flex flex-wrap bd-highlight">
        <span class="flex-fill bd-highlight col-xl-1 col-sm-0 col-0"></span>
        <span class="flex-fill bd-highlight col-lg-3 col-md-4 col-sm-12 col-12 offset-xl-2 ml-lg-5">パスワード</span>
        <p class="form_group">
          <%= f.password_field :password,class: "form_control flex-fill bd-highlight",size: "50", autocomplete: "current-password" %>
        </p>
      </div>
      <div class="d-flex flex-wrap bd-highlight">
        <span class="flex-fill bd-highlight col-xl-1 col-sm-0 col-0"></span>
        <span class="flex-fill bd-highlight col-lg-3 col-md-4 col-sm-12 col-12 offset-xl-2 ml-lg-5"></span>
        <p class="form_group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </p>
      </div>
      <div class="d-flex bd-highlight">
          <span class="flex-fill bd-highlight col-1"></span>
        <span class="flex-fill bd-highlight col-3 ml-5"></span>
        <p class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary px-5" %>
        </p>
      </div>
      <% end %>
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
